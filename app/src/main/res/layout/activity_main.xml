<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="0dp"
    android:background="@android:color/black"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@android:color/black">
        <TextView
            android:id="@+id/result_field"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:text="0"
            android:textColor="@android:color/white"
            android:textSize="50sp"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="12"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:id="@+id/reset_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:text="R"
                android:textColor="#FFA500"
                android:textSize="25sp"
                android:onClick="reset"
                android:background="@android:color/black"
                >
            </Button>

            <!--android:background="@drawable/button_pressed"
            android:background="@android:color/black"-->

            <Button
                android:id="@+id/undo_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:text="B"
                android:textColor="#FFA500"
                android:textSize="25sp"
                android:onClick="undo"
                android:background="@android:color/black"/>
            <Button
                android:id="@+id/percent_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:text="%"
                android:textColor="#FFA500"
                android:textSize="25sp"
                android:onClick="percent"
                android:background="@android:color/black"/>
            <Button
                android:id="@+id/divide_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:text="/"
                android:textColor="#FFA500"
                android:textSize="25sp"
                android:onClick="divide"
                android:background="@android:color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:id="@+id/one_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:text="1"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:onClick="one"
                android:background="@android:color/black"/>
            <Button
                android:id="@+id/two_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:text="2"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:onClick="two"
                android:background="@android:color/black"/>
            <Button
                android:id="@+id/three_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:text="3"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:onClick="three"
                android:background="@android:color/black"/>
            <Button
                android:id="@+id/multiply_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:text="*"
                android:textColor="#FFA500"
                android:textSize="25sp"
                android:onClick="multiply"
                android:background="@android:color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:id="@+id/four_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:text="4"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:onClick="four"
                android:background="@android:color/black"/>
            <Button
                android:id="@+id/five_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:text="5"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:onClick="five"
                android:background="@android:color/black"/>
            <Button
                android:id="@+id/six_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:text="6"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:onClick="six"
                android:background="@android:color/black"/>
            <Button
                android:id="@+id/minus_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:text="-"
                android:textColor="#FFA500"
                android:textSize="25sp"
                android:onClick="minus"
                android:background="@android:color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <Button
                android:id="@+id/seven_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:text="7"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:onClick="seven"
                android:background="@android:color/black"/>
            <Button
                android:id="@+id/eight_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:text="8"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:onClick="eight"
                android:background="@android:color/black"/>
            <Button
                android:id="@+id/nine_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:text="9"
                android:textColor="@android:color/white"
                android:textSize="25sp"
                android:onClick="nine"
                android:background="@android:color/black"/>
            <Button
                android:id="@+id/plus_button"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_margin="0dp"
                android:text="+"
                android:textColor="#FFA500"
                android:textSize="25sp"
                android:onClick="plus"
                android:background="@android:color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:layout_weight="1">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">
                <Button
                    android:id="@+id/open_bracket_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="0dp"
                    android:text="("
                    android:textColor="#FFA500"
                    android:textSize="25sp"
                    android:onClick="openBracket"
                    android:background="@android:color/black"/>
                <Button
                    android:id="@+id/close_bracket_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="0dp"
                    android:text=")"
                    android:textColor="#FFA500"
                    android:textSize="25sp"
                    android:onClick="closeBracket"
                    android:background="@android:color/black"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="3">
                <Button
                    android:id="@+id/zero_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="0dp"
                    android:text="0"
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:onClick="zero"
                    android:background="@android:color/black"/>
                <Button
                    android:id="@+id/point_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="0dp"
                    android:text="."
                    android:textColor="@android:color/white"
                    android:textSize="25sp"
                    android:onClick="dot"
                    android:background="@android:color/black"/>
                <Button
                    android:id="@+id/equal_button"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:layout_margin="0dp"
                    android:text="="
                    android:textColor="#FFA500"
                    android:textSize="25sp"
                    android:onClick="equal"
                    android:background="@android:color/black"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
</LinearLayout>